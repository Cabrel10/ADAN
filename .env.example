# Configuration de l'API Binance (obligatoire pour le mode live)
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Paramètres généraux
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
ENVIRONMENT=dev  # dev, test, prod

# Paramètres de trading
INITIAL_CAPITAL=10000  # Capital initial en USDT
MAX_POSITION_SIZE=0.1  # Taille maximale de position (10% du capital)
MAX_DAILY_TRADES=10  # Nombre maximal de trades par jour

# Paramètres de l'API (si nécessaire)
API_HOST=0.0.0.0
API_PORT=8000

# Paramètres de base de données (si nécessaire)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adan_trading
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Configuration du cache (optionnel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
